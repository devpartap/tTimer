{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-std=c++20",
                // "-O3",
                "${workspaceFolder}/cli/main.cpp", "${workspaceFolder}/cli/timer.cpp",
                "${workspaceFolder}/cli/io_data.cpp","${workspaceFolder}/cli/logs.cpp",
                "${workspaceFolder}/cli/profiles.cpp",
                "${workspaceFolder}/cli/Libs/CppLinuxSerial/SerialPort.cpp",
                "-lstdc++",
                "-o",
                "${workspaceFolder}/tmprun/tTimer"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group":{
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}